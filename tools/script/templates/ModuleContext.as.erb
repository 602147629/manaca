import flash.display.DisplayObjectContainer;

import org.robotlegs.base.ContextEvent;
import org.robotlegs.core.IInjector;
import org.robotlegs.utilities.modular.mvcs.ModuleContext;

import <%= @vars.package %>.controller.<%= @vars.module_name %>StartupCommand;
import <%= @vars.package %>.controller.<%= @vars.module_name %>ShutdownCommand;

//TODO 需要添加asdoc
public class <%= @vars.module_name %>Context extends ModuleContext
{
    //==========================================================================
    //  Constructor
    //==========================================================================
    /**
     * 构造一个新的<code><%= @vars.module_name %>Context</code>实例.
     * 
     */
    public function <%= @vars.module_name %>Context(contextView:DisplayObjectContainer, 
            autoStartup:Boolean,
            injector:IInjector)
    {
        super(contextView, autoStartup, injector);
    }
    //==========================================================================
    //  Methods
    //==========================================================================
    /**
     * @inheritDoc
     */
    override public function startup() : void
    {
        commandMap.mapEvent(ContextEvent.STARTUP, <%= @vars.module_name %>StartupCommand);
        commandMap.mapEvent(ContextEvent.SHUTDOWN, <%= @vars.module_name %>ShutdownCommand);
        dispatchEvent(new ContextEvent(ContextEvent.STARTUP));
        super.startup();
    }
}
}